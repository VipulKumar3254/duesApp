rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    match /duesUsers/{document=**} {
    allow read;
    allow write;
    }
    match /{document=**} {
    allow read;
    allow  write: if request.auth != null;
    }
     match /admin/{docId} {
      // Allow read and write only if the user is authenticated and is an admin
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  
   match /users/{userId} {
      // Allow the user to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    
  }
}